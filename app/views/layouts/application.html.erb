<!DOCTYPE html>
<html>
  <head>
    <title>SocialApp</title>
    <%= csrf_meta_tags %>

    
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <div class="header-logo">
        <% if @current_user %>
          <%= link_to("SocialApp", "/posts") %>
        <% else %>
          <%= link_to("SocialApp", "/") %>
        <% end %>
      </div>
      <ul class="header-menus">
        <% if @current_user %>
          <li>
            <%= link_to(@current_user.name, "/users/#{@current_user.id}") %>
          </li>
          <li>
            <%= link_to("Posts", "/posts") %>
          </li>
          <li>
            <%= link_to("New post", "/posts/new") %>
          </li>
          <li>
            <%= link_to("Users", "/users") %>
          </li>
          <li>
            <%= link_to("Log out", "/logout", {method: :post}) %>
          </li>
        <% else %>
          <li>
            <%= link_to("About", "/about") %>
          </li>
          <li>
            <%= link_to("Sign up", "/signup") %>
          </li>
          <li>
            <%= link_to("Log in", "/login") %>
          </li>
        <% end %>
      </ul>
    </header>

    <% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
    <% end %>
    
    <%= yield %>
  </body>
</html>